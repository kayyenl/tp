<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <HBox fx:id="helpMessageContainer" alignment="CENTER" prefHeight="302.0" prefWidth="632.0">
        <children>
               <BorderPane prefHeight="287.0" prefWidth="614.0">
                  <top>
                     <VBox BorderPane.alignment="CENTER">
                        <children>
                           <HBox stylesheets="@HelpWindow.css">
                              <children>
                            <Label fx:id="helpMessage" text="Label">
                              <HBox.margin>
                                <Insets right="5.0" />
                              </HBox.margin>
                                    <padding>
                                       <Insets left="5.0" />
                                    </padding>
                            </Label>
                                 <Region prefHeight="31.0" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                            <Button id="copyButton" fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" prefHeight="26.0" prefWidth="103.0" text="Copy URL">
                              <HBox.margin>
                                <Insets left="5.0" />
                              </HBox.margin>
                            </Button>
                              </children>
                              <VBox.margin>
                                 <Insets bottom="4.0" left="4.0" right="4.0" top="6.0" />
                              </VBox.margin>
                           </HBox>
                        </children>
                     </VBox>
                  </top>
                  <left>
                      <TreeView fx:id="treeView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                          <TreeItem expanded="true" value="User's Methods">
                              <children>
                                  <TreeItem fx:id="addmethods" value="Add methods" >
                                      <children>
                                          <TreeItem fx:id="addperson" value="addperson" />
                                          <TreeItem fx:id="addtask" value="addtask" />
                                      </children>
                                  </TreeItem>
                                  <TreeItem fx:id="deletemethods" value="Delete methods">
                                      <children>
                                          <TreeItem fx:id="deleteperson" value="deleteperson" />
                                          <TreeItem fx:id="deletetask" value="deletetask" />
                                      </children>
                                  </TreeItem>
                                  <TreeItem fx:id="listmethods" value="List methods">
                                      <children>
                                          <TreeItem fx:id="listperson" value="listperson" />
                                          <TreeItem fx:id="listtask" value="listtask" />
                                      </children>
                                  </TreeItem>
                                  <TreeItem fx:id="findmethods" value="Find methods">
                                      <children>
                                          <TreeItem fx:id="findperson" value="findperson" />
                                          <TreeItem fx:id="findtask" value="findtask" />
                                      </children>
                                  </TreeItem>
                                  <TreeItem fx:id="assignmethods" value="Assign methods">
                                      <children>
                                          <TreeItem fx:id="assign" value="assign" />
                                      </children>
                                  </TreeItem>
                              </children>
                          </TreeItem>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <BorderPane.margin>
                           <Insets bottom="4.0" left="4.0" right="4.0" />
                        </BorderPane.margin>
                      </TreeView>
                  </left>
                  <center>
                     <TextArea fx:id="method__description"
                               editable="false" prefHeight="200.0"
                               prefWidth="200.0" BorderPane.alignment="CENTER"
                               text="">
                        <BorderPane.margin>
                           <Insets bottom="4.0" left="4.0" right="4.0" />
                        </BorderPane.margin></TextArea>
                  </center>
               </BorderPane>
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
